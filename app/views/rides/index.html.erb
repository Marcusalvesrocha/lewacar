<div class="container py-5">

  <%= simple_form_for :search, url: root_path, method: :get do |f| %>
    <div class="search-form-control form-group mb-5">
      <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="Digite para onde você precisa ir" />
      <button name="button" type="submit" class="btn btn-info">
        <i class="fas fa-search"></i> Search
      </button>
    </div>
  <% end %>


  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="title mb-0 mt-3">Caronas disponíveis</h3>
    <%= link_to "Oferecer uma carona", new_ride_path, class: "btn btn-success btn-sm" if policy(Ride).new? %>
  </div>
  <div class="row d-flex justify-content-between">
    <% @rides.each do |ride| %>
      <div class="card mb-5 shadow" style="width: 18rem;">
        <div class="card-body">
          <div class="title text-center">
            Viagem com <%= ride.user.first_name %>
          </div>
          <div>
            <hr>
            <i class="fa-regular fa-map"></i> <%= ride.route %>
          </div>
        </div>
        <ul class="list-group">
          <li class="list-group-item"><i class="fa-regular fa-calendar"></i> <%= ride.date %></li>
          <li class="list-group-item"><i class="fa-solid fa-location-dot"></i> <%= ride.pickup_address %></li>
          <li class="list-group-item"><i class="fa-regular fa-clock"></i> <%#= ride.time.strftime('%H:%M') %></li>
        </ul>
        <div class="card-body">
          <%= link_to "Mais detalhes", ride_path(ride), class: "btn btn-primary d-grid" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<i class="fa-solid fa-car-side"></i>
