<%= simple_form_for @ride do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :route,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <%= f.date_field :date,
                required: true%>
    <%= f.input :price,
                required: true%>
    <%= f.input :pickup_address,
                required: true%>
    <%= f.time_field :time,
                required: true%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Cadastrar" %>
  </div>
<% end %>
