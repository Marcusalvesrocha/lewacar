
<div class="container" style="max-width: 50%;">
  <div class="title my-4">
    <h2>Cadastro</h2>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
    data: {turbo: false}) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :first_name, label: 'Nome',
                  required: true%>
      <%= f.input :last_name, label: 'Sebrenome',
                  required: true%>
      <%= f.input :age, label: 'Idade',
                  required: true%>
      <%= f.input :password, label: 'Senha',
                  required: true,
                  hint: ("MÃ­nimo de #{@minimum_password_length} caracteres" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation, label: 'Confirme sua senha',
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :avatar, as: :file %>
    </div>

    <div class="form-actions d-grid mb-3">
      <%= f.button :submit, "Cadastrar", class:"btn btn-success btn-sm mt-3" %>
    </div>
  <% end %>

  <div class="d-flex justify-content-center mb-5">
    <%= render "devise/shared/links" %>
  </div>

</div>
